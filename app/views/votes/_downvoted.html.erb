<!-- To render this partial simply call:
     <% render :partial => "votes/downvoted", :locals => { :post => @post } %>
     Where @post will be the specific post instance that the partial is for
-->

<%= form_for post, :remote => true, :url => { :controller => :votes, :action=> :unvote }, :html => {:method => "POST" } do |f| %>
  <%= f.hidden_field :id, :value => post.id %>
  <%= f.submit "Undo Downvote", :class => "btn btn-inverse" %>
<% end %>
